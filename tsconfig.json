{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "outDir": "./dist",

    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
